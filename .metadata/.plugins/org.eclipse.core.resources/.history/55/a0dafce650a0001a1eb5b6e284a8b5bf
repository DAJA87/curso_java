package Ejercicios;

import java.util.Scanner;

public class Ejercicio2 {

	public static void main(String[] args) {
		Scanner teclado = new Scanner(System.in);
		int num1 = 0, num2 = 0, num3 = 0, num4 = 0, suma = 0;
		double promedio = 0;
		
		System.out.println("Ingresar número 1");
		num1 = teclado.nextInt();
		System.out.println("Ingresar número 2");
		num2 = teclado.nextInt();
		System.out.println("Ingresar número 3");
		num3 = teclado.nextInt();
		System.out.println("Ingresar número 4");
		num4 = teclado.nextInt();
		
		suma = num1+num2+num3+num4;
		promedio = suma/4; 
				
		System.out.println("La suma de todos los números es: "+suma);
		System.out.println("El promedio de los número es: "+promedio);
		
		teclado.close();
	}

}
