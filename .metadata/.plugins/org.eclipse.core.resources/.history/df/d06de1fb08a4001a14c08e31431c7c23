package Cola;

public class Cola {
	
	private Nodo raiz,fondo;
	
	/**
	 * Constructor de la clase.
	 */
	Cola(){
		raiz = null;
		fondo = null;
	}
	
	/**
	 * Validar si la lista esta vacia.
	 * @return
	 */
	boolean vacia() {
		if (raiz == null)
			return true;
		else
			return false;
	}
	
	
