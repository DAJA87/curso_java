		Nodo nuevo;
		nuevo = new Nodo();
		nuevo.info = info;
		nuevo.sig = null;
		
		if (vacia()) {
			raiz = nuevo;
			
		}else {
			fondo.sig = nuevo;
			fondo = nuevo;
		}
	}
	
